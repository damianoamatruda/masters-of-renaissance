<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="it.polimi.ingsw.client.gui.MainMenuController"
            id="body" stylesheets="@mainmenu.css">
  <center>
    <VBox alignment="CENTER">
      <VBox alignment="CENTER">
        <VBox.margin>
          <Insets bottom="40.0"/>
        </VBox.margin>
        <ImageView fitHeight="150.0" pickOnBounds="true" preserveRatio="true">
          <Image url="@logo.png"/>
        </ImageView>
      </VBox>
      <Button alignment="CENTER" onAction="#handleSinglePlayer" prefWidth="400.0" text="Singleplayer"/>
      <Button alignment="CENTER" onAction="#handleMultiplayer" prefWidth="400.0" text="Multiplayer">
        <VBox.margin>
          <Insets top="8.0"/>
        </VBox.margin>
      </Button>
      <BorderPane maxWidth="-Infinity" prefWidth="400.0">
        <left>
          <Button alignment="CENTER" onAction="#handleOptions" prefWidth="190.0" text="Options..."/>
        </left>
        <right>
          <Button alignment="CENTER" onAction="#handleQuit" prefWidth="190.0" text="Quit Game"/>
        </right>
        <VBox.margin>
          <Insets top="30.0"/>
        </VBox.margin>
      </BorderPane>
      <padding>
        <Insets bottom="80.0"/>
      </padding>
    </VBox>
  </center>
</BorderPane>
