<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="it.polimi.ingsw.client.gui.MultiplayerController"
            id="body" stylesheets="@multiplayer.css">
  <center>
    <VBox alignment="CENTER">
      <VBox alignment="CENTER">
        <VBox.margin>
          <Insets bottom="40.0"/>
        </VBox.margin>
        <ImageView fitHeight="150.0" pickOnBounds="true" preserveRatio="true">
          <Image url="@logo.png"/>
        </ImageView>
      </VBox>
      <TextField id="server" fx:id="server" alignment="CENTER" prefWidth="400.0" maxWidth="400.0"
                 promptText="Server IP:port (default = localhost:1234)" text="127.0.0.1:1234"/>
      <Button alignment="CENTER" onMouseClicked="#handleServerChoice" prefWidth="400.0" text="Connect">
        <VBox.margin>
          <Insets top="8.0"/>
        </VBox.margin>
      </Button>
      <Button alignment="CENTER" onMouseClicked="#handleBack" prefWidth="400.0" text="Back">
        <VBox.margin>
          <Insets top="8.0"/>
        </VBox.margin>
      </Button>
      <padding>
        <Insets bottom="80.0"/>
      </padding>
    </VBox>
  </center>
</BorderPane>
