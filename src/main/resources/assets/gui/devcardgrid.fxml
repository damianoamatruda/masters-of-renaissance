<?xml version="1.0" encoding="UTF-8"?>

<?import it.polimi.ingsw.client.gui.components.SButton?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="canvas" xmlns="http://javafx.com/javafx/16"
            fx:controller="it.polimi.ingsw.client.gui.DevCardGridController"
            maxHeight="720" minHeight="720" maxWidth="1280" minWidth="1280">
   <HBox AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
         AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="40.0" spacing="20.0" alignment="CENTER">
      <VBox alignment="CENTER">
         <Group>
            <StackPane fx:id="devCardGridPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="680.0"
                       prefWidth="640.0" scaleX="0.7" scaleY="0.7"/>
         </Group>
         <HBox alignment="CENTER" spacing="20.0">
            <ChoiceBox fx:id="devSlotChoicePicker" prefHeight="20.0" prefWidth="100.0"/>
            <SButton fx:id="submitBtn" mnemonicParsing="false" prefHeight="20.0" text="Submit"
                     textAlignment="CENTER"/>
         </HBox>
      </VBox>
      <VBox alignment="CENTER" spacing="5.0" fx:id="rightVBox" prefWidth="640.0">
         <Group>
            <HBox fx:id="containersBox" alignment="CENTER" spacing="10.0" scaleX="0.9" scaleY="0.9"/>
         </Group>
         <Group>
            <HBox fx:id="leadersBox" alignment="CENTER" spacing="10.0" scaleX="0.9" scaleY="0.9"/>
         </Group>
         <Group>
            <HBox fx:id="devSlotsBox" alignment="TOP_CENTER" scaleX="0.75" scaleY="0.75"/>
         </Group>
      </VBox>
   </HBox>
   <SButton fx:id="back" alignment="BOTTOM_LEFT" text="Back" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0"/>
</AnchorPane>
